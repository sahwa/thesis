keywords = {,Nourishment,Phenotypic plasticity,Polistes,Social castes,Transcriptomics},
number = {1},
pages = {1--12},
pmid = {25880983},
title = {{Nourishment level affects caste-related gene expression in Polistes wasps}},
volume = {16},
year = {2015}
}
