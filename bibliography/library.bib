doi = {10.1007/BF00302947},
file = {:home/sam/Documents/PhD/PhD/papers/Humans/Tsuji - 1988 - Obligate parthenogenesis and reproductive division of labor in the Japanese queenless ant Pristomyrmex pungens - Comparis.pdf:pdf},
isbn = {0026500205},
issn = {03405443},
journal = {Behavioral Ecology and Sociobiology},
number = {4},
