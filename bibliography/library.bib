journal = {Behavioral Ecology},
number = {3},
pages = {323--332},
pmid = {17816422},
title = {{Dominance hierarchy and reproductive conflicts among subordinates in a monogynous queenless ant}},
url = {http://beheco.oxfordjournals.org/content/10/3/323.abstract{\%}5Cnhttp://www.beheco.oupjournals.org/cgi/doi/10.1093/beheco/10.3.323},
