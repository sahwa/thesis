doi = {10.1007/s002650100336},
file = {:home/sam/Documents/PhD/PhD/papers/Humans/Foster, Ratnieks - 2001 - Paternity, reproduction and conflict in vespine wasps A model system for testing kin selection predictions.pdf:pdf},
isbn = {0340-5443},
issn = {03405443},
journal = {Behavioral Ecology and Sociobiology},
keywords = {,Diploid males,Dolichovespula,Intraspecific parasitism,Kin selection,Levels of selection,Matricide,Mutual policing,Paternity,Relatedness,Reproductive conflict,Sex allocation,Vespa,Vespinae wasps,Vespula,Worker policing},
number = {1},
pages = {1--8},
title = {{Paternity, reproduction and conflict in vespine wasps: A model system for testing kin selection predictions}},
