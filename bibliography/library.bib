keywords = {Dominance behaviour,Queenless ant,Reproductive dominance,Social conflicts,Social insect},
number = {11},
pages = {1073--1080},
title = {{A novel method of assessing dominance hierarchies shows nuance, linearity and stability in the dinosaur ant Dinoponera quadriceps}},
