doi = {10.1534/genetics.104.030692},
file = {:home/sam/Documents/PhD/PhD/papers/Humans/Li, Stephens - 2003 - Modeling Linkage Disequilibrium and Identifying Recombination Hotspots Using Single-Nucleotide Polymorphism Data.pdf:pdf},
isbn = {0016-6731},
