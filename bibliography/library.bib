keywords = {Geographical structure,Long-distance migration,Migration,Population structure,Selection,Spatial structure},
pages = {1--11},
publisher = {Elsevier Inc.},
title = {{Clines with partial panmixia across a geographical barrier in an environmental pocket}},
url = {http://dx.doi.org/10.1016/j.tpb.2016.03.003},
volume = {110},
year = {2016}
}
