file = {:home/sam/Documents/PhD/PhD/papers/Humans/Kellner et al. - 2007 - Polygyny and polyandry in small ant societies.pdf:pdf},
isbn = {0962-1083},
issn = {09621083},
journal = {Molecular Ecology},
keywords = {,Colony kin structure,Mating frequencies,Microsatellites,Pachycondyla,Polyandry,Primary polygyny},
number = {11},
pages = {2363--2369},
pmid = {17561897},
title = {{Polygyny and polyandry in small ant societies}},
volume = {16},
year = {2007}
