doi = {10.1073/pnas.1515937112},
file = {:home/sam/Documents/PhD/PhD/papers/Humans/Patalano et al. - 2015 - Molecular signatures of plastic phenotypes in two eusocial insect species with simple societies.pdf:pdf},
